# PREXCOL Backend - Environment Variables Template
# Copy this file to .env and fill in the actual values

# ============================================
# Core Settings
# ============================================
# Set to False in production
DEBUG=False
# Generate a secure random key for production
SECRET_KEY=your-secure-production-key-change-this
# Comma-separated list of allowed domains
ALLOWED_HOSTS=api.prexcol.com,prexcol-backend.railway.app,localhost

# ============================================
# Database Configuration
# ============================================
# PostgreSQL Connection String (Standard for PaaS)
DATABASE_URL=postgres://user:password@host:port/dbname

# ============================================
# CORS & CSRF Settings (Netlify Integration)
# ============================================
# Add your Netlify frontend URL here
CORS_ALLOWED_ORIGINS=https://prexcol.netlify.app,http://localhost:5175
CSRF_TRUSTED_ORIGINS=https://prexcol.netlify.app
CORS_ALLOW_CREDENTIALS=True

# ============================================
# JWT Settings
# ============================================
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=7

# ============================================
# Email Configuration (SMTP)
# ============================================
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key

# ============================================
# Security Settings (Production)
# ============================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
